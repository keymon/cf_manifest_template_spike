---
jobs:
  - name: nats
    templates:
      - name: nats
      - name: nats_stream_forwarder
    instances: 1
    resource_pool: common
    networks:
      - name: default
        default: [dns, gateway]

properties:
  nats:
    user: nats
    password: <%= yaml_values.secrets.passwords.cf.nats %>
    address: <%= yaml_values.job_address.nats.address %>
    port: 4222
    machines:
      - <%= yaml_values.job_address.nats.address %>

