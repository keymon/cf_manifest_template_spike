---
jobs:
  - name: nats
    templates:
      - name: nats
      - name: nats_stream_forwarder
    instances: 1
    resource_pool: common
    networks:
      - name: default
        default: [dns, gateway]

properties:
  nats:
    user: nats
    password: <%= search_yaml_values("secrets.passwords.cf.nats") %>
    address: <%= search_yaml_values("job_address.nats.address") %>
    port: 4222
    machines:
      - <%= search_yaml_values("job_address.nats.address") %>

