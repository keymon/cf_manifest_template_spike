---
jobs:
  - name: nats
    templates:
      - name: nats
      - name: nats_stream_forwarder
    instances: 1
    resource_pool: common
    networks:
      - name: default
        default: [dns, gateway]

properties:
  nats:
    user: nats
    password: <%= secrets[:passwords][:cf][:nats] %>
    address: <%= job_address[:nats][:address] %>
    port: 4222
    machines:
      - <%= job_address[:nats][:address] %>

